@page
@model BusinessAPI.Pages.ProductViewModel
@{
    ViewData["Title"] = "Product View";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Business Supply System - Product View</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f5f5f5;
            color: #333;
        }
        h2 {
            text-align: center;
            margin-top: 20px;
            color: #444;
        }
        .view-container {
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 5px;
            padding: 20px;
            margin: 20px auto;
            width: 90%;
            max-width: 1200px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        th {
            background-color: #007bff;
            color: #fff;
        }
        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
        .btn {
            display: inline-block;
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            margin-top: 20px;
        }
        .btn:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <h2>Product View</h2>
    <div class="view-container">
        <table>
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Location</th>
                    <th>Total Packages</th>
                    <th>Min Price</th>
                    <th>Max Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.Products)
                {
                    <tr>
                        <td>@product.product_name</td>
                        <td>@product.location</td>
                        <td>@product.total_packages</td>
                        <td>@product.min_price.ToString("C")</td>
                        <td>@product.max_price.ToString("C")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div style="text-align: center;">
        <a asp-page="/Index" class="btn">Back to Procedures</a>
    </div>
</body>