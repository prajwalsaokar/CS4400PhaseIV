@page
@model BusinessAPI.Pages.OwnerViewModel
@{
    ViewData["Title"] = "Owner View";
}

<h2>Owner View</h2>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Business Supply System - Owner View</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f5f5f5;
            color: #333;
        }
        h2 {
            text-align: center;
            margin-top: 20px;
            color: #444;
        }
        .view-container {
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 5px;
            padding: 20px;
            margin: 20px auto;
            width: 90%;
            max-width: 1200px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        th {
            background-color: #007bff;
            color: #fff;
        }
        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
        .btn {
            display: inline-block;
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            margin-top: 20px;
        }
        .btn:hover {
            background-color: #0056b3;
        }
    </style>
</head>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Username</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Address</th>
            <th>Num Businesses</th>
            <th>Diff Places</th>
            <th>High Ratings</th>
            <th>Low Ratings</th>
            <th>Total Debt</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Owners != null && Model.Owners.Count > 0)
        {
            foreach (var owner in Model.Owners)
            {
                <tr>
                    <td>@owner.Username</td>
                    <td>@owner.first_name</td>
                    <td>@owner.last_name</td>
                    <td>@owner.address</td>
                    <td>@owner.num_businesses</td>
                    <td>@owner.diff_places</td>
                    <td>@owner.high_ratings</td>
                    <td>@owner.low_ratings</td>
                    <td>@owner.total_debt.ToString("C")</td> <!-- Format as currency -->
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="9">No data available.</td>
            </tr>
        }
    </tbody>
</table>

<a href="/Index" class="btn btn-primary">Back to Procedures</a>
