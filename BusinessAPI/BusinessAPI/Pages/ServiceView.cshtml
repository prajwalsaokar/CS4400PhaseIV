@page
@model BusinessAPI.Pages.ServiceViewModel
@{
    ViewData["Title"] = "Service View";
}

<h2>Service View</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Long Name</th>
            <th>Home Base</th>
            <th>Manager</th>
            <th>Total Sales</th>
            <th>Products Carried</th>
            <th>Total Cost</th>
            <th>Weight Carried</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var service in Model.Services)
        {
            <tr>
                <td>@service.id</td>
                <td>@service.long_name</td>
                <td>@service.home_base</td>
                <td>@service.manager</td>
                <td>@service.total_sales</td>
                <td>@service.unique_products</td>
                <td>@service.total_cost</td>
                <td>@service.total_weight</td>
            </tr>
        }
    </tbody>
</table>

<a asp-page="/Index" class="btn btn-primary">Back to Procedures</a>