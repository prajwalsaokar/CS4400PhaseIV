@page
@model BusinessAPI.Pages.ServiceViewModel
@{
    ViewData["Title"] = "Service View";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Business Supply System - Service View</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f5f5f5;
            color: #333;
        }
        h2 {
            text-align: center;
            margin-top: 20px;
            color: #444;
        }
        .view-container {
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 5px;
            padding: 20px;
            margin: 20px auto;
            width: 90%;
            max-width: 1200px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        th {
            background-color: #007bff;
            color: #fff;
        }
        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
        .btn {
            display: inline-block;
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            margin-top: 20px;
        }
        .btn:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <h2>Service View</h2>
    <div class="view-container">
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Long Name</th>
                    <th>Home Base</th>
                    <th>Manager</th>
                    <th>Total Sales</th>
                    <th>Products Carried</th>
                    <th>Total Cost</th>
                    <th>Weight Carried</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var service in Model.Services)
                {
                    <tr>
                        <td>@service.id</td>
                        <td>@service.long_name</td>
                        <td>@service.home_base</td>
                        <td>@service.manager</td>
                        <td>@service.total_sales.ToString("C")</td>
                        <td>@service.unique_products</td>
                        <td>@service.total_cost.ToString("C")</td>
                        <td>@service.total_weight</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div style="text-align: center;">
        <a asp-page="/Index" class="btn">Back to Procedures</a>
    </div>
</body>